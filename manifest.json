{
  "manifest_version": 3,
  "name": "Social mind",
  "version": "1.0",
  "description": "Manages time spent on specified websites.",
  "permissions": ["tabs", "storage", "alarms", "scripting"],
  "host_permissions": ["*://*.facebook.com/*", "*://*.instagram.com/*", "*://*.youtube.com/*", "*://*.reddit.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  }
}
